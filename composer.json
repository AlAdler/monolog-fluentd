{
    "name": "yegortokmakov/monolog-fluentd",
    "description": "A handler for Monolog that sends messages to Fluentd / td-agent",
    "keywords": ["log", "logging", "monolog", "fluentd", "td-agent"],
    "homepage": "https://github.com/yegortokmakov/monolog-fluentd",
    "license": "MIT",
    "authors": [
        {
            "name": "Yegor Tokmakov",
            "email": "yegor@tokmakov.biz"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "psr/log": "~1.0",
        "monolog/monolog": ">1.4.0",
        "fluent/logger": "0.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {"FluentdHandler\\": "src/FluentdHandler"}
    },
    "autoload-dev": {
        "psr-4": {"Monolog\\": "vendor/monolog/tests/Monolog"}
    }
}